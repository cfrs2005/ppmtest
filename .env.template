# 大模型内容分析模块环境变量配置模板
# 复制此文件为 .env 并填入真实的API密钥

# ===== OpenAI 配置 =====
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1

# ===== Anthropic Claude 配置 =====
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_BASE_URL=https://api.anthropic.com

# ===== 数据库配置 =====
DATABASE_URL=sqlite:///bilibili_analyzer.db
# 或者使用 PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/bilibili_analyzer

# ===== Redis 配置 =====
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===== Flask 配置 =====
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# ===== Bilibili API 配置 =====
BILIBILI_API_BASE=https://api.bilibili.com
BILIBILI_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# ===== 分析配置 =====
MAX_VIDEOS_PER_CHANNEL=100
ANALYSIS_INTERVAL_HOURS=6
LOG_LEVEL=INFO
LOG_FILE=analysis.log

# ===== Token 限制配置 =====
DAILY_TOKEN_LIMIT=100000
DAILY_COST_LIMIT=10.0
WEEKLY_TOKEN_LIMIT=500000
WEEKLY_COST_LIMIT=50.0
MONTHLY_TOKEN_LIMIT=2000000
MONTHLY_COST_LIMIT=200.0

# ===== 缓存配置 =====
CACHE_MAX_SIZE=1000
CACHE_DEFAULT_TTL=3600
CACHE_CLEANUP_INTERVAL=300

# ===== 性能配置 =====
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
RETRY_ATTEMPTS=3
RETRY_DELAY=1

# ===== 分析功能开关 =====
ENABLE_CHUNKING=True
ENABLE_CACHING=True
ENABLE_KNOWLEDGE_EXTRACTION=True
ENABLE_COST_MONITORING=True
ENABLE_AUTO_MODEL_SWITCH=True

# ===== 默认模型配置 =====
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-3.5-turbo
MAX_TOKENS_PER_CHUNK=2000
MIN_TOKENS_PER_CHUNK=100
OVERLAP_TOKENS=200
MAX_KNOWLEDGE_ENTRIES=20